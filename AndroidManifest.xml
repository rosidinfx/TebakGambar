<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.odin.tebakgambar"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

     <supports-screens
    	android:largeScreens="true"
    	android:normalScreens="true"
    	android:smallScreens="true"
    	android:resizeable="true"
    	android:anyDensity="true" />
     
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >        
        <activity
            android:name="com.odin.tebakgambar.MainActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.odin.tebakgambar.MainMenu"
            android:label="@string/title_activity_main_menu"
            android:parentActivityName="com.odin.tebakgambar.MainActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.odin.tebakgambar.MainActivity" />
        </activity>
        <activity
            android:name="com.odin.tebakgambar.GamePlay"
            android:label="@string/title_activity_game_play"
            android:parentActivityName="com.odin.tebakgambar.MainActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.odin.tebakgambar.MainActivity" />
        </activity>
        <activity
            android:name="com.odin.tebakgambar.GameOver"
            android:label="@string/title_activity_game_over"
            android:parentActivityName="com.odin.tebakgambar.MainActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.odin.tebakgambar.MainActivity" />
        </activity>
        <activity
            android:name="com.odin.tebakgambar.Win"
            android:label="@string/title_activity_win"
            android:parentActivityName="com.odin.tebakgambar.MainActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.odin.tebakgambar.MainActivity" />
        </activity>
        <activity
            android:name="com.odin.tebakgambar.AboutUS"
            android:label="@string/title_activity_about_us"
            android:parentActivityName="com.odin.tebakgambar.MainActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.odin.tebakgambar.MainActivity" />
        </activity>
    </application>

</manifest>
